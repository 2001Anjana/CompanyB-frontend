import React, { useState } from 'react';
import { TextField, Button, Typography } from '@mui/material';

const InvoiceForm = () => {
  const [customerInvoice, setCustomerInvoice] = useState('');
  const [internalInvoice, setInternalInvoice] = useState('');
  const [submitted, setSubmitted] = useState(false);

  const handleFormSubmit = () => {
    // Here you can send both invoices to the backend for processing or storage
    // For demonstration purposes, let's just log them for now
    console.log('Customer Invoice:', customerInvoice);
    console.log('Internal Invoice:', internalInvoice);
    setSubmitted(true);
  };

  return (
    <div>
      <Typography variant="h4">Invoice Submission Form</Typography>
      <TextField
        label="Customer Invoice"
        variant="outlined"
        value={customerInvoice}
        onChange={(e) => setCustomerInvoice(e.target.value)}
        fullWidth
        multiline
      />
      <TextField
        label="Internal Invoice"
        variant="outlined"
        value={internalInvoice}
        onChange={(e) => setInternalInvoice(e.target.value)}
        fullWidth
        multiline
      />
      <Button variant="contained" onClick={handleFormSubmit}>
        Submit Invoices
      </Button>
      {submitted && <Typography variant="body1">Invoices submitted successfully!</Typography>}
    </div>
  );
};

export default InvoiceForm;



  
  
